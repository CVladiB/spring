<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="readerDao" class="ru.baranova.spring.dao.reader.ReaderDaoFile">
    </bean>

    <bean id="testQuestionDao" class="ru.baranova.spring.dao.QuestionDaoCsv">
        <constructor-arg name="readerDao" ref="readerDao"/>
        <property name="path" value="testQuestionnaire.csv"/>
        <property name="delimiter" value=";"/>
        <property name="questionPosition" value="1"/>
        <property name="rightAnswerPosition" value="2"/>
        <property name="optionPosition" value="3"/>
    </bean>


</beans>